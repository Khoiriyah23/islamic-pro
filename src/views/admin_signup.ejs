    <h2 class="add-res">Admin Sign up</h2>
    <p class="error"><%= error %></p>
    <div class="form">
        <form action="/admin/signup" method="POST" >
            <div>     
                 <label for="fName">
                     <p>First Name</p>
                 </label>
                 <input type="text" name="fName" id="fName" value="<%= form[0]?.fName %>">
            </div>
            <div>     
                 <label for="lName">
                     <p>Last Name</p>
                 </label>
                 <input type="text" name="lName" id="lName" value="<%= form[0]?.lName %>">
            </div>
            <div>     
                 <label for="email">
                     <p>Email Address</p>
                 </label>
                 <input type="email" name="email" id="email" value="<%= form[0]?.email %>">
            </div>

            <div>     
                 <label for="password">
                     <p>Password</p>
                 </label>
                 <input type="password" name="password" id="password" value="">
            </div>
        

        <input type="submit" value="Create Account" class="btn4" style="width: 150px; font-family: myFont;">

        </form>
    </div>



