<%- include("./layout/header.ejs") %>
<a href="/books" class="btn3 back-link" style="left: 0; margin-left: 20px;">
    &larr;
</a>
    <h2 class="add-res">Edit Resource</h2>
    <p class="error"><%= error %></p>
    <div class="form">
        <form action="/books" method="POST"  encType="multipart/form-data">
            <div>     
                 <label for="srcName">
                     <p>Author Name</p>
                 </label>
                 <input type="text" name="srcName" id="srcName" value="<%= book.srcName %>">
            </div>

            <div>     
                <label for="title">
                    <p>Title</p>
                </label>
                <input type="text" name="title" id="title" value="<%= book.title %>">
           </div>

           <div>     
                 <label for="numberOfPages">
                     <p>Number of pages</p>
                 </label>
                 <input type="number" name="numberOfPages" id="numberOfPages" value="<%= book.numberOfPages %>">
            </div>

            <div>     
                <label for="datePublished">
                    <p>Date Published</p>
                </label>
                <input type="date" name="datePublished" id="datePublished" value="<%= book.datePublished %>">
          </div>

      
         <div>     
           <label for="dateUpdated">
               <p>Date Updated</p>
           </label>
           <input type="date" name="dateUpdated" id="" value="<%= book.dateUpdated %>">
        </div>

        <div>     
            <label for="description">
                <p>Description</p>
            </label>
            <input type="text" name="description" id="" value="<%= book.description %>">
         </div>

        <div>     
            <label for="subjects">
                <p>Subjects</p>
            </label>
            <input type="text" name="subjects" id="" value="<%= book.subjects %>">
         </div>

         <div>     
            <label for="file">
                <p>File</p>
            </label>
            <input type="file" name="file" id="" value="<%= book.file %>">
        </div>

        <div>     
            <label for="imageUrl">
                <p>Image Url</p>
            </label>
            <input type="text" name="imageUrl" id="" value="<%= book.imageUrl %>">
        </div>

        <input type="submit" value="Create Resource" class="btn4" style="font-family: myFont;">

        </form>
    </div>



<%- include("./layout/footer.ejs") %>
